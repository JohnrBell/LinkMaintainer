<%= stylesheet_link_tag "login", :media => "all" %>
<center>
<div class="header">
  <div class="row">
		<div class="title">
		<img src='/logo.png'><br>
			<!-- <h2><b>Log In @ thx.bz</b></h2> -->
			<i>Simple links for your business, thx us later.</i>
			<!-- <hr> -->
		</div>
	</div>
</div>

<div id='createform'>		
	<% if @error %>
		<center>
			<h3 style='color:red;'>User name already exists.</h3>
		</center>
	<% end %>

		<div class="signup">
			<form method='POST' action='/users/create'>
    	<!-- <label>Name</label> -->
    	<input class='inputbox name' type="text" name="name" placeholder="Name" required="required" /><br>
    	<!-- <label>Email</label> -->
    	<input class='inputbox email' type="text" name="email" placeholder="Email" required="required" /><br>
    	<!-- <label>Password</label> -->
      <input class='inputbox pw' type="password" name="password" placeholder="Password" required="required" /><br>
				<input name='authenticity_token' value='<%= form_authenticity_token() %>' type='hidden'><br>
				<button class='button' id='submit'>Sign Up</button><br>
				<a class="button" href="/">Back Home</a>
			</form>
		</div>
	</div>
	
	
</center>